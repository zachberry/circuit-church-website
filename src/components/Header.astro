---
import { Image } from "astro:assets";
import vhsGif from "../images/vhs.gif";
import Wrapper from "../components/Wrapper.astro";
import HeaderInternalLinksList from "./HeaderInternalLinksList.astro";
import HeaderExternalLinksList from "./HeaderExternalLinksList.astro";

interface Props {}
---

<header id="sticky-header">
	<Wrapper>
		<nav role="navigation">
			<div id="menu-toggle">
				<a class="home" href="/">Home</a>
				<label id="hamburger" role="button">
					<input type="checkbox" />
					<span class="bun"></span>
					<span class="bun"></span>
					<span class="bun"></span>

					<div id="menu">
						<Image src={vhsGif} class="video-bg" alt="" />
						<ul class="internal">
							<HeaderInternalLinksList />
						</ul>
						<ul class="external">
							<HeaderExternalLinksList />
						</ul>
					</div>
				</label>
			</div>
		</nav>
	</Wrapper>
</header>

<style>
	/* Keyframes for the hamburger menu animation */
	@keyframes top-bun {
		0% {
			transform: translate(0, 0.25em);
		}

		50% {
			transform: translate(0, 0.75em);
		}

		100% {
			transform: translate(0, 0.75em) rotate(45deg);
		}
	}

	@keyframes middle-bun {
		0% {
			opacity: 1;
		}

		50% {
			opacity: 1;
		}

		51% {
			opacity: 0;
		}

		100% {
			opacity: 0;
		}
	}

	@keyframes bottom-bun {
		0% {
			transform: translate(0, 1.25em);
		}

		50% {
			transform: translate(0, 0.75em);
		}

		100% {
			transform: translate(0, 0.75em) rotate(-45deg);
		}
	}

	.video-bg {
		position: absolute;
		left: 0;
		top: 0;
		object-fit: fill;
		width: 100vw;
		height: 100vh;
		background: black;
	}

	header {
		display: flex;
		gap: 1em;
		top: 0;
		position: sticky;
		padding: 2em 0;
		background: transparent;
		z-index: 1;
		transition: background 0.25s ease-in-out;
	}

	#menu-toggle {
		display: block;
		z-index: 1;
		display: flex;
		align-items: center;
		justify-content: space-between;
		flex: 1;
	}

	#menu-toggle #hamburger {
		position: relative;
		width: 1.5em;
		height: 1.5em;
	}

	#menu-toggle input {
		display: block;
		position: absolute;
		left: 0;
		top: 0;
		right: 0;
		bottom: 0;
		cursor: pointer;
		z-index: 2;
		-webkit-touch-callout: none;
		border: 2px solid green;
		padding: 0;
		margin: 0;
		border: 0;
		opacity: 0;
	}

	#menu-toggle .bun {
		display: block;
		width: 1.5em;
		height: 1px;
		position: absolute;
		background: #cdcdcd;
		z-index: 1;
	}

	#menu-toggle .bun:nth-of-type(1) {
		/* transform-origin: 0 0; */
		transform: translate(0, 0.25em);
	}

	#menu-toggle .bun:nth-of-type(2) {
		transform: translate(0, 0.75em);
	}

	#menu-toggle .bun:nth-of-type(3) {
		transform: translate(0, 1.25em);
	}

	#menu-toggle input:checked ~ .bun:nth-of-type(1) {
		animation: top-bun 0.25s cubic-bezier(0.77, 0.2, 0.05, 1) forwards;
	}

	#menu-toggle input:checked ~ .bun:nth-of-type(2) {
		animation: middle-bun 0.25s cubic-bezier(0.77, 0.2, 0.05, 1) forwards;
	}

	#menu-toggle input:checked ~ .bun:nth-of-type(3) {
		animation: bottom-bun 0.25s cubic-bezier(0.77, 0.2, 0.05, 1) forwards;
	}

	#menu {
		position: fixed;
		left: 0;
		right: 0;
		top: 0;
		bottom: 0;
		transition: opacity 0.5s cubic-bezier(0.77, 0.2, 0.05, 1);
		opacity: 0;
		padding-top: 5em;
		display: flex;
		flex-direction: column;
		gap: 1em;
		pointer-events: none;
	}

	#menu-toggle input:checked ~ #menu {
		opacity: 1;
		pointer-events: auto;
	}

	nav {
		flex: 1;
		justify-content: space-between;
		display: flex;
		gap: 1em;
	}

	.home {
		background-image: url("../images/logo.svg");
		background-position: center;
		background-repeat: no-repeat;
		color: transparent;
		width: 3em;
		height: 2em;
		position: relative;
		z-index: 2;
	}

	nav ul {
		display: flex;
		flex-direction: column;
		gap: 1em;
		align-items: center;
		position: relative;
		padding: 0;
		margin: 0;
	}

	nav ul :global(li) {
		transform: translate(0, 100vh);
		transition: transform 0.5s cubic-bezier(0.77, 0.2, 0.05, 1);
		transition-delay: 2s;
	}

	#menu-toggle input:checked ~ #menu .internal :global(li):nth-child(1) {
		transition-delay: 0.05s;
	}

	#menu-toggle input:checked ~ #menu .internal :global(li):nth-child(2) {
		transition-delay: 0.1s;
	}

	#menu-toggle input:checked ~ #menu .internal :global(li):nth-child(3) {
		transition-delay: 0.15s;
	}

	#menu-toggle input:checked ~ #menu .internal :global(li):nth-child(4) {
		transition-delay: 0.2s;
	}

	#menu-toggle input:checked ~ #menu .internal :global(li):nth-child(5) {
		transition-delay: 0.25s;
	}

	#menu-toggle input:checked ~ #menu .internal :global(li):nth-child(6) {
		transition-delay: 0.3s;
	}

	#menu-toggle input:checked ~ #menu .external :global(li):nth-child(1) {
		transition-delay: 0.35s;
	}

	#menu-toggle input:checked ~ #menu .external :global(li):nth-child(2) {
		transition-delay: 0.4s;
	}

	#menu-toggle input:checked ~ #menu .external :global(li):nth-child(3) {
		transition-delay: 0.45s;
	}

	#menu-toggle input:checked ~ #menu .external :global(li):nth-child(4) {
		transition-delay: 0.5s;
	}

	#menu-toggle input:checked ~ #menu :global(li) {
		transform: translate(0, 0);
	}

	@media (min-width: 680px) {
		nav ul :global(li) {
			transform: none;
			font-size: 1em;
		}

		#menu-toggle {
			justify-content: flex-start;
			gap: 1em;
		}

		#menu-toggle #hamburger {
			width: auto;
			height: auto;
			flex: 1;
		}

		#menu-toggle #hamburger .bun {
			display: none;
		}

		#menu-toggle input {
			display: none;
		}

		#menu {
			position: static;
			opacity: 1;
			padding-top: 0;
			display: flex;
			flex-direction: row;
			gap: 1em;
			justify-content: space-between;
			flex: 1;
			pointer-events: auto;
		}

		#menu .video-bg {
			display: none;
		}

		nav ul {
			flex-direction: row;
		}
	}

	@media (prefers-reduced-motion: reduce) {
		header,
		#menu,
		nav ul :global(li) {
			transition: none !important;
		}

		#menu-toggle input:checked ~ .bun:nth-of-type(1),
		#menu-toggle input:checked ~ .bun:nth-of-type(2),
		#menu-toggle input:checked ~ .bun:nth-of-type(3) {
			animation-duration: 0s;
		}

		#menu .video-bg {
			display: none;
		}

		#menu {
			background: black;
		}
	}
</style>
